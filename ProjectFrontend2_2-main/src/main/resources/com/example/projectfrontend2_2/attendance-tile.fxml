<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="50.0" prefWidth="473.0" style="-fx-background-color: #e5fdff;"
            xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projectfrontend2_2.AttendanceTile">
    <children>
        <Label fx:id="ID" alignment="CENTER" layoutX="87.0" layoutY="12.0" prefHeight="25.0" prefWidth="195.0"
               text="ID">
            <font>
                <Font name="Segoe UI Semilight" size="18.0"/>
            </font>
        </Label>
        <ImageView fitHeight="43.0" fitWidth="37.0" layoutX="23.0" layoutY="7.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@immigration.png"/>
            </image>
        </ImageView>
        <Button fx:id="present" layoutX="380.0" layoutY="9.0" mnemonicParsing="false" onAction="#presentClick"
                style="-fx-background-color: #95ace8;" text="P" textFill="WHITE">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Button>
        <Button fx:id="absent" layoutX="420.0" layoutY="9.0" mnemonicParsing="false" onAction="#absentClick"
                style="-fx-background-color: #95ace8;" text="A" textFill="WHITE">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
